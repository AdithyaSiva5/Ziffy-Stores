        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Coupons View</h2>
                    <p>Add, edit or block a coupon</p>
                </div>
                <div>
                    <a href="/admin/add-coupon" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                
                <div class="card-body">
                    <div class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5">
                     <% coupons.forEach(coupon => { %>
                        <div class="col" style="margin-bottom: 20px;">
                            <div class="coupon-card">


                                <div class="text-center">
                    
                                    <div class="d-flex flex-row text-center">
                    
                                    <img src="https://icon-library.com/images/coupon-icon-png/coupon-icon-png-21.jpg" width="70">
                                    
                                    <div class="d-flex flex-column ml-1">
                    
                                        <h1 class="mb-0 amount"> ₹<%= coupon.discountAmount %> </h1>
                                        <span class="discount">OFFER</span>
                                        
                                    </div>
                                </div>
                                    
                                </div>

                                <hr class="line">

                                <div class="info-wrap">
                                    <h4 class="mb-0"> <%= coupon.couponCode %> </h4>
                                    <p class="text-truncate"> <%= coupon.description %></p>
                                </div>

                    
                                <div class="d-flex justify-content-between align-items-center mt-4">

                                    <a href="/admin/edit-coupon/<%= coupon._id %>" class="btn btn-sm font-sm rounded btn-dark edit-button">
                                        Edit
                                    </a>

                                    <div class="actions" >
                                        <% if (coupon.status == 'Inactive') { %>
                                            <a  style="background-color: #b61c1c; color: #ffffff;" class="btn btn-sm font-sm btn-success rounded block-unblock-button" data-action="/admin/unblock-coupon/<%= coupon._id %>">
                                                Unblock
                                            </a>
                                        <% } else { %>
                                            <a class="btn btn-sm font-sm btn-danger rounded block-unblock-button" data-action="/admin/block-coupon/<%= coupon._id %>">
                                            Block
                                            </a>
                                        <% } %>
                                    </div>
                                    
                                </div>
                                 
                    
                             </div>
                        </div>
                      <% }) %>
                    </div>
                  </div>


                  <script>
                    document.addEventListener("DOMContentLoaded", ()=>{
                        const blockUnblockButton = document.querySelectorAll('.block-unblock-button')
            
                        blockUnblockButton.forEach(button=>{
                            button.addEventListener('click', (e)=>{
                            e.preventDefault();
            
                            const action = button.getAttribute('data-action');
            
                            Swal.fire({
                                title: "Are you sure?",
                                text: "You will be able to revert this!",
                                icon: "warning",
                                showCancelButton: true,
                                confirmButtonColor: "#3085d6",
                                cancelButtonColor: "#d33",
                                confirmButtonText: "Yes!"
                                }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = action;
                                }
                                });
                        })
            
                        })
            
                    });
            
                </script>

                  
