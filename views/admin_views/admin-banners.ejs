                    <h2 class="content-title card-title">Banners View</h2>
                    <p>Add, edit or block a banner</p>
                </div>
                <div>
                    <a href="/admin/add-banner" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                
                 <!-- card-header end -->
                <div class="card-body">
                    <div class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5">
                     <% banners.forEach(banner => { %>
                        <div class="col">
                          <div class="card card-banner-grid">
                                <% if (banner.image && banner.image.length > 0) { %>
                                <a href="#" class="img-wrap">
                                    <img src="<%= banner.image %>" alt="<%= banner.title %>">
                                </a>
                                <% } %>
                                <div class="info-wrap">
                                  <div class="title mb-5 ml-5">
                                    <h6 class="title text-truncate"><%= banner.title %></h6>
                                  </div>
                                  <div class="buttons mb-5 ml-5">
                                    <!-- Edit and Block/Unblock buttons -->
                                    <a href="/admin/edit-banner/<%= banner._id %>" class="btn btn-sm font-sm rounded btn-dark" style="margin-right: 10px;">
                                      Edit
                                  </a>
                                  <% if (banner.status == 'Inactive') { %>
                                      <a  class="btn btn-sm font-sm btn-success rounded block-unblock-button" data-action="/admin/unblock-banner/<%= banner._id %>">
                                          Unblock
                                      </a>
                                  <% } else { %>
                                      <a class="btn btn-sm font-sm btn-danger rounded block-unblock-button" data-action="/admin/block-banner/<%= banner._id %>">
                                      Block
                                      </a>
                                  <% } %>
                                  </div>
                                </div>
                          </div>
                        </div>
                      <% }) %>
                    </div>
                  </div>


                  <script>
                    document.addEventListener("DOMContentLoaded", ()=>{
                        const blockUnblockButton = document.querySelectorAll('.block-unblock-button')
            
                        blockUnblockButton.forEach(button=>{
                            button.addEventListener('click', (e)=>{
                            e.preventDefault();
            
                            const action = button.getAttribute('data-action');
            
                            Swal.fire({
                                title: "Are you sure?",
                                text: "You will be able to revert this!",
                                icon: "warning",
                                showCancelButton: true,
                                confirmButtonColor: "#3085d6",
                                cancelButtonColor: "#d33",
                                confirmButtonText: "Yes!"
                                }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = action;
                                }
                                });
                        })
            
                        })
            
                    });
            
                </script>

                  
