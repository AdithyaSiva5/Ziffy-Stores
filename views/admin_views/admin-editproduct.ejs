    <section class="content-main">
        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title">Edit Product</h2>
                    <div>
                        <!-- <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button> -->
                        <!-- <button type="submit" class="btn btn-md rounded font-sm hover-up">Add product</button> -->
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Basic</h4>
                    </div>
                    <div class="card-body">
                      <form action="/admin/postEdit-product/<%= productdata._id %>" method="post" enctype="multipart/form-data" id="productForm">
                            <div class="mb-4">
                                <label for="product_name" class="form-label">Product Name</label>
                                <input type="text" placeholder="Enter name" class="form-control" value="<%= productdata.productName %>" id="productName" name="productName" required>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Product Description</label>

                                <textarea placeholder="Enter description" class="form-control" rows="4" id="productDiscription" name="productDiscription" required><%= productdata.productDiscription %></textarea>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Regular price</label>
                                        <div class="row gx-2">
                                            <input placeholder="₹" type="number" class="form-control" value="<%= productdata.regularPrice %>" id="regularPrice" name="regularPrice" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Selling price</label>
                                        <input placeholder="₹" type="number" class="form-control"  value="<%= productdata.sellingPrice %>" id="sellingPrice" name="sellingPrice" required>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <label class="form-label" for="productStatus">Status</label>
                                    <select class="form-select" id="productStatus" name="productStatus" required>
                                        <option value="" disabled>Select status</option>
                                        <option value="Block">Block</option>
                                        <option value="Unblock" selected>Unblock</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row gx-2">
                                <label class="form-label">Category</label>
                                <select class="form-control" id="category" name="productCategory" required>
                                  <% categorydata.forEach(catagory => { %>
                                    <option value="<%= catagory.catgName %>" <%= (productdata.productCategory === catagory.catgName) ? 'selected' : '' %>><%= catagory.catgName %></option>
                                  <% }) %>
                                </select>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Brand</label>
                                <input type="text" placeholder="Enter brand" class="form-control" value="<%= productdata.productBrand %>" id="productBrand" name="productBrand" required>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Size (in ml)</label>
                                        <div class="row gx-2">
                                            <input placeholder="Enter size" type="number" class="form-control" value="<%= productdata.productSize %>" id="productSize" name="productSize" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Stock</label>
                                        <input placeholder="Enter stock" type="number" class="form-control" value="<%= productdata.productStock %>" id="productStock" name="productStock" required>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-md rounded font-sm hover-up">Edit product</button>
                        <!-- form clossing was here -->
                    </div>
                </div> 
            </div>
            <div class="col-lg-3">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Media</h4>
                    </div>
                   

                  <div class="card-body">
                    <div id="imagePreview" class="input-upload">
                        <img src="/adminAssets/imgs/theme/upload.svg" alt="">
                        <div class="row">
                            <div class="col-md-9">
                                <input class="form-control" type="file" id="productImg" name="productImg" accept="image/*" multiple onchange="previewImage(event)">
                                <div id="preview-container" class="d-flex flex-wrap"></div>
                            </div>
                        </div>
                        <% productdata.productImg.forEach(img => { %>
                            <div class="row">
                                <div class="col-md-6" >
                                    <img src="/<%= img %>" alt="" >
                                </div>
                                <div class="col-md-6">
                                    <!-- <button type="button" class="btn btn-sm btn-danger" id="deleteImageBtn" name="deleteImageBtn">Delete</button> -->
                                    <a href="/admin/delete-image?productId=<%= productdata.id %>&image=<%= img%>" class="btn btn-sm btn-danger" id="deleteImageBtn" name="deleteImageBtn">Delete</a>
                                </div>
                                
                            </div>
                        <% }) %>
                    </div>
                </div>
                </div> 
            </div>
        </form>

        <script>
            function previewImage(event) {
                var input = event.target;
                var previewContainer = document.getElementById('preview-container');
                previewContainer.innerHTML = '';
        
                for (let i = 0; i < input.files.length; i++) {
                    if (input.files[i]) {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            var previewImage = document.createElement('img');
                            previewImage.src = e.target.result;
                            previewImage.classList.add('preview-image');
                            previewContainer.appendChild(previewImage);
                        };
                        reader.readAsDataURL(input.files[i]);
                    }
                }
            }
        
            document.addEventListener("DOMContentLoaded", function () {
                const productForm = document.getElementById("productForm");
        
                productForm.addEventListener("submit", function (event) { 
                    if (!validateForm()) {
                        event.preventDefault();
                    }
                });
        
function validateForm() {
    
            const productName = document.getElementById("productName").value;
            const productDescription = document.getElementById("productDiscription").value;
            const regularPrice = parseFloat(document.getElementById("regularPrice").value);
            const sellingPrice = parseFloat(document.getElementById("sellingPrice").value);
            const productStatus = document.getElementById("productStatus").value;
            const category = document.getElementById("category").value;
            const productBrand = document.getElementById("productBrand").value;
            const productSize = parseFloat(document.getElementById("productSize").value);
            const productStock = document.getElementById("productStock").value;
            const productImgInput = document.getElementById("productImg");
            const productImgFiles = productImgInput.files;
            console.log(productImgInput.files.length + " <= imput and files =>"+ productImgFiles.length)

            console.log("Inputs captured");

            // if (productImgFiles.length === 0) {
            //     Swal.fire({
            //         icon: 'error',
            //         title: 'Oops...',
            //         text: 'Please select at least one image!',
            //     });
            //     return false;
            // }
            if (isNaN(regularPrice) || isNaN(sellingPrice) || isNaN(productSize) || isNaN(productStock)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Price, Size, and Stock must be numeric values!',
                });
                return false;
            }
            if (regularPrice <= 0 || sellingPrice <= 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Price must be more than zero!',
                });
                return false;
            }
            if (sellingPrice >= regularPrice) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Selling Price must be lesser than the Actual Price!',
                });
                return false;
            }
            if (productSize <= 0 || productStock < 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Stock must be above zero or zero',
                });
                return false;
            }
            if (!productName.trim() || !productDescription.trim() || !regularPrice.trim() || !sellingPrice.trim() || !productStatus.trim() || !category.trim() || !productBrand.trim() || !productSize.trim() || !productStock.trim() || productImg.files.length === 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'All fields are required!',
                });
                return false;
            }
            
    console.log("Validation successful");
        
                 return true;
                }
            });
        </script>
        </div>
    </section> 
    

