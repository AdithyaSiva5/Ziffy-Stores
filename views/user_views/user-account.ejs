                                                        <h4 style="font-size: small; font-weight: 500">
                                                            Got a referral ? Paste here for Bonus
                                                        </h4>
                                                        <br />
                                                        <div>
                                                            <input style="border: 2px solid rgb(80, 80, 80)" type="text" placeholder="Paste Code Here" id="codeInput" />
                                                        </div>
                                                        <br />
                                                        <button class="btn btn-fill-out btn-block btn-sm" id="referel">
                                                            Apply
                                                        </button>
                                                        </div>
                                                </div>
                                                <div>Referals Available:<br>
                                                    <% if (referels) { %>
                                                        <% referels.forEach(element => { %>
                                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= element.referelId %><br>
                                                        <% }); %>
                                                    <% } %>
                                                </div>
                                                
                                            <% } %>
                                        </div>
                                    </div>

                                    <script>
                                        document.addEventListener("DOMContentLoaded", () => { 
                                            const referel = document.getElementById("referel");
                                            referel.addEventListener("click", (e) => {
                                                const codeValue = document.getElementById("codeInput").value.trim();
                                                if (codeValue.trim() !== "") {
                                              fetch(`/applyreferel?referel=${codeValue}`, {
                                                method: "POST",
                                                headers: {
                                                  "Content-Type": "application/json",
                                                },
                                              })
                                                .then((response) => {
                                                  if (!response.ok) {
                                                    throw new Error(`HTTP error!`);
                                                  }
                                                  return response.json();
                                                })
                  
                                                .then((data) => {
                                                    if (data.success) {
                                                    console.log(data);
                                                    Swal.fire({
                                                        position: "top-centre",
                                                        icon: "success",
                                                        title: "Credited ₹100 in Wallet",
                                                        showConfirmButton: false,
                                                        timer: 1500,
                                                    });
                                                } else {
                                                    console.error("Error:", data.message);
                                                    Swal.fire({
                                                        icon: "error",
                                                        title: "Oops...",
                                                        text: data.error,
                                                        showConfirmButton: false,
                                                    });
                                                }
                                                })
 
                                            } else {
                                                Swal.fire({
                                                    icon: "error",
                                                    title: "Oops...",
                                                    text: "Enter a Code Before Applying !",
                                                    showConfirmButton: false,
                                                  });
                                            }

                                             })
                                        })
                                        
                                    </script>
