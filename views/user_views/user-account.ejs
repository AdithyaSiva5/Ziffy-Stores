                                                        document.getElementById('username').value = address.name;
                                                        document.getElementById('addressloc').value = address.addressType;
                                                        document.getElementById('city').value = address.city;
                                                        document.getElementById('landmark').value = address.landMark;
                                                        document.getElementById('state').value = address.state;
                                                        document.getElementById('postcode').value = address.pincode;
                                                        document.getElementById('phoneNumber').value = address.phone;
                                                        document.getElementById('altphone').value = address.altPhone;
                                                        
                                                    }
                                                });
                                                
                                            }

                                    
                                document.addEventListener('DOMContentLoaded', function () {
                                     // var dataAddressId = document.querySelector(`[data-address-id="${addressId}"]`).dataset.addressId;
                                // console.log(dataAddressId);
                                const form = document.getElementById('myForm');
                               

                                form.addEventListener('submit', function (event) {
                                    event.preventDefault(); 

                                    clearErrorMessages();

                                    const name = validateField('username', 'Name cannot be blank.');
                                    const addressType = validateField('addressloc', 'Address cannot be blank.');
                                    const city = validateField('city', 'City cannot be blank.');
                                    const landmark = validateField('landmark', 'Landmark cannot be blank.');
                                    const state = validateField('state', 'State cannot be blank.');
                                    const postcode = validateNumberField('postcode', 'Invalid postcode. It should be a 6-digit number.', 6);
                                    const phoneNumber = validateNumberField('phoneNumber', 'Invalid phone number. It should be a 10-digit number and cannot start with 0.', 10, true);
                                    const altPhone = validateNumberField('altphone', 'Invalid alternative phone number. It should be a 10-digit number and cannot start with 0.', 10, true);

                                    if (name && addressType && city && landmark && state && postcode && phoneNumber && altPhone) {
                                        const newData = {
                                            name,
                                            addressType,
                                            city,
                                            landmark,
                                            state,
                                            postcode,
                                            phoneNumber,
                                            altPhone,
                                        };
                                        
                                        sendDataToServer(newData, currentAddressId);
                                    }
                                });
                                 function sendDataToServer(data,addressId) {
                                    
                            const apiUrl = '/post-edit-address';

                            fetch(apiUrl, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                },
                                body: JSON.stringify({ data, addressId }),
                            })
                            .then(response => response.json())
                            .then(responseData => {
                                if (responseData.success) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Success!',
                                        text: responseData.message,
                                        showConfirmButton: false,
                                        timer: 1500,
                                        willClose: () => {
                                            const addressModal = new bootstrap.Modal(document.getElementById('addressModal'));
                                            setTimeout(() => {
                                                // addressModal.hide();
                                                window.location.href = `/user-account`;
                                             }, 100);
                                             
                                        },
                                    });
                                } else {
                                    console.error('Server response indicates failure:', responseData);
                                }
                            })
                            .catch(error => {
                                console.error('Error sending data to server:', error);
                            });
                        }

                                        function validateField(fieldId, errorMessage) {
                                            const field = document.getElementById(fieldId);
                                            const value = field.value.trim();

                                            if (!value) {
                                                displayErrorMessage(field, errorMessage);
                                                return null;
                                            }

                                            return value;
                                        }

                                        function validateNumberField(fieldId, errorMessage, length, disallowZero) {
                                            const field = document.getElementById(fieldId);
                                            const value = field.value.trim();

                                            if (disallowZero && value === '0') {
                                                displayErrorMessage(field, errorMessage);
                                                return null;
                                            }

                                            if (isNaN(value) || value.length !== length) {
                                                displayErrorMessage(field, errorMessage);
                                                return null;
                                            }

                                            return value;
                                        }

                                        function displayErrorMessage(field, errorMessage) {
                                            const errorDiv = document.createElement('div');
                                            errorDiv.classList.add('text-danger');
                                            errorDiv.textContent = errorMessage;

                                            field.parentNode.appendChild(errorDiv);
                                        }

                                        function clearErrorMessages() {
                                            const errorMessages = document.querySelectorAll('.text-danger');
                                            errorMessages.forEach(function (errorMessage) {
                                                errorMessage.remove();
                                            });
                                        }
                                    });
                                    function confirmDelete(addressId) {
                                        Swal.fire({
                                            icon: 'warning',
                                            title: 'Are you sure?',
                                            text: 'You won\'t be able to revert this!',
                                            showCancelButton: true,
                                            confirmButtonColor: '#d33',
                                            cancelButtonColor: '#3085d6',
                                            confirmButtonText: 'Yes, delete it!'
                                        }).then((result) => {
                                            if (result.isConfirmed) {
                                                window.location.href = `/delete-address?addressId=${addressId}`;
                                            }
                                        });
                                    }

