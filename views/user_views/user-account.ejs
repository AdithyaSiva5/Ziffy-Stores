                                    <script>
                                        document.addEventListener("DOMContentLoaded", () => {
                                            const submitButton = document.getElementById('submitButton2');
                                    
                                            submitButton.addEventListener("click", (e) => {
                                                if (!validateForm()) {
                                                    e.preventDefault();
                                                }else{
                                                   
                                                }
                                            });
                                           
                                    
                                            const validateForm = () => {
                                                resetErrorMessages();
                                    
                                                const inputFields = [
                                                    { id: 'username1', name: 'Username' },
                                                    { id: 'address1', name: 'Address' },
                                                    { id: 'city1', name: 'City' },
                                                    { id: 'landmark1', name: 'Landmark' },
                                                    { id: 'state1', name: 'State' },
                                                    { id: 'postcode1', name: 'Postcode' },
                                                    { id: 'phoneNumber1', name: 'Phone Number' },
                                                    { id: 'altphone1', name: 'Alternative Phone Number' }
                                                ];
                                    
                                                let isValid = true;
                                    
                                                inputFields.forEach(field => {
                                                    const value = document.getElementById(`${field.id}`).value;
                                                    const trimmedValue = value.trim();
                                    
                                                    if (value !== trimmedValue) {
                                                        showError(`${field.id}Error`, `${field.name} cannot have whitespaces`);
                                                        isValid = false;
                                                    }
                                    
                                                    if (trimmedValue == "") {
                                                        showError(`${field.id}Error`, `${field.name} cannot be empty`);
                                                        isValid = false;
                                                    }
                                                });
                                    
                                                const phoneNumber = String(document.getElementById('phoneNumber1').value);
                                                const altphone = String(document.getElementById('altphone1').value);
                                                const postcode = String(document.getElementById('postcode1').value);

                                    
                                                if (isNaN(phoneNumber) || phoneNumber.length !== 10 || phoneNumber[0] === '0') {
                                                    showError('phoneNumber1Error', 'Phone number must be a number with exactly 10 digits and should not start with 0');
                                                    isValid = false;
                                                }
                                    
                                                if (isNaN(altphone) || altphone.length !== 10 || altphone[0] === '0') {
                                                    showError('altphone1Error', 'Alternative phone number must be a number with exactly 10 digits and should not start with 0');
                                                    isValid = false;
                                                }
                                    
                                                if (isNaN(postcode) || postcode.length !== 6) {
                                                    showError('postcode1Error', 'Postcode must be a number with exactly 6 digits');
                                                    isValid = false;
                                                }
                                    
                                                if (phoneNumber === altphone) {
                                                    showError('phoneNumber1Error', 'Phone number and alternative phone number should be different');
                                                    showError('altphone1Error', 'Phone number and alternative phone number should be different');
                                                    isValid = false;
                                                }
                                    
                                                return isValid;
                                            }
                                            
    
                                    
                                            function showError(elementId, message) {
                                                const errorElement = document.getElementById(elementId);
                                    
                                                if (errorElement) {
                                                    errorElement.textContent = message;
                                                    errorElement.style.color = 'red';
                                                } else {
                                                    console.error(`Error element with ID '${elementId}' not found.`);
                                                }
                                            }
                                    
                                            function resetErrorMessages() {
                                                const errorElements = document.querySelectorAll('.error');
                                                errorElements.forEach((element) => {
                                                    element.textContent = '';
                                                });
                                            }
                                        });
                                    </script>
