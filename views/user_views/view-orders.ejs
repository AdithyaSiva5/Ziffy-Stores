        <section class="pt-50 pb-100">
            <div class="container">
                <div class="row">
                    <div class="card-body">
                      <div class="table-responsive">
                          <table class="table">
                              <thead>
                                  <tr>
                                      <th>Product</th>
                                      <th>Image</th>
                                      <th>Date</th>
                                      <th>PaymentStatus</th>
                                      <th>PaymentMethod</th>
                                      <th>Total</th>
                                      <th>Address</th>
                                      <% if(orderDetails.orderStatus !== "Order Failed"){ %>
                                      <th>Cancel Order</th>
                                      <% }%>
                                     
                                      
                                  </tr>
                              </thead>
                              <tbody>
                                  <% if (!orderDetails || orderDetails.length === 0) { %>
                                      <h6>No orders</h6>
                                  <% } else { %>
                                      <% orderDetails.products.forEach((item) => { %>
                                        
                                  <tr>
                                      <td> <a href="/product-details/<%= item?.productId?._id %>"><%= item?.productId?.productName %></a> </td>
                                      <td><a href="/product-details/<%= item?.productId?._id %>"><img src="/<%= item?.productId?.productImg[0] %>" class="img-sm " alt="Item" height="68" width="68"></a></td>
                                      <td><%= moment(orderDetails.createdAt).format("MMM Do YY") %></td>
                                      <% if(orderDetails.orderStatus === "Order Failed"){ %>
                                        <td><%= orderDetails.paymentStatus %></td>
                                        <% }else{%>
                                        <td><%= item.status %></td>
                                       <% } %>
                                      <td><%= orderDetails.paymentMethod %></td>
                                      <td>₹<%= item.price * item?.quantity %> for <%= item?.quantity%> item</td>
                                      <td>
                                        <%= orderDetails.address.address[0].addressType %><br>
                                        <%= orderDetails.address.address[0].city %><br>
                                        <%= orderDetails.address.address[0].state %>
                                      </td>
                                      <% if(orderDetails.orderStatus !== "Order Failed"){ %>
                                      <td class="text-center">
                                        <button class="btn-link btn-delete-product" data-product-id="<%= item?.productId?._id %>"  data-order-id="<%= orderDetails?._id %>">
                                            <i class="fa-regular fa-trash-can"></i>
                                        </button>
                                     </td>
                                     <%} %>
                                     
                                      
                                  </tr>                                
                                  <% }); %>
                              <% } %>
                              </tbody>
                              <style>
                                .btn-delete-product {
                                  background: none;
                                  border: none;
                                  padding: 0;
                                  margin: 0;
                                  font-size: inherit;
                                  color: inherit;
                                  cursor: pointer;
                                }
                                .btn-delete-product:hover {
                                        color: red;
                                    }
                              </style>
                                  <script>
                                    document.addEventListener("DOMContentLoaded", function () {
                                        var deleteButtons = document.querySelectorAll('.btn-delete-product');
                                
                                        deleteButtons.forEach(function (button) {
                                            button.addEventListener('click', function () {
                                                var productId = this.getAttribute('data-product-id');
                                                var orderId = this.getAttribute('data-order-id');
                                                Swal.fire({
                                                    title: 'Are you sure?',
                                                    text: 'You want to remove this item from the order',
                                                    icon: 'warning',
                                                    showCancelButton: true,
                                                    confirmButtonColor: '#d33',
                                                    cancelButtonColor: '#3085d6',
                                                    confirmButtonText: 'Yes, Remove item!'
                                                }).then((result) => {
                                                    if (result.isConfirmed) {
                                                        fetch(`/cancelSingle-order?orderId=${orderId}&productId=${productId}`, {
                                                            method: 'POST', 
                                                            headers: {
                                                                'Content-Type': 'application/json',
                                                            },
                                                            
                                                        })
                                                        .then(response => {
                                                        if (!response.ok) {
                                                            throw new Error(`HTTP error! status: ${response.status}`);
                                                        }
                                                        return response.json();
                                                    })
                                                    .then(data => {
                                                        console.log("Response from server", data);

                                                        if (data.message) {
                                                            window.location.reload();
                                                        }
                                                         if(data.error){
                                                        Swal.fire({
                                                        position: 'center',
                                                        icon: 'error',
                                                        title: data.error,
                                                        showConfirmButton: false,
                                                        timer: 1500
                                                        });
                                                    }
                                                    })
                                                    
                                                    .catch(error => {
                                                        console.error('Error:', error);
                                                    });
                                                    }
                                                });
                                                
                                
                                            });
                                        });
                                    });
                                </script>
                          </table>
                          <h5 class="d-flex justify-content-end">Total Amount: ₹ <%= orderDetails.totalAmount %></h5>
                          <div class="d-flex justify-content-center">
                            <div class="d-flex justify-content-between col-6">
                              
                                <% if(orderDetails.orderStatus === "Order Placed" || orderDetails.orderStatus === "Shipped") {%> 
                                  <a href="#" id="cancel-button" class="btn btn-sm action-button" data-action="/cancel-order/<%= orderDetails._id %>" style="background-color: rgb(180, 36, 36);">Cancel Order</a>
                                  <%} else if(orderDetails.orderStatus === "Delivered") {%> 

                                        <a href="#" id="returnButton" class="btn btn-sm action-button" data-action="/return-order/<%= orderDetails._id %>" style="background-color: rgb(180, 36, 36);">Return Order</a>
                                  
                                    <%} else if(orderDetails.orderStatus === "Cancelled") {%> 
                                      <h5 style="color: rgb(177, 29, 29);">The order is cancelled</h5>
                                      <%} else if (orderDetails.orderStatus === "Returned") {%> 
                                          <h5 style="color: rgb(177, 29, 29);">The order is returned</h5>
                                          <%}%>
                                          <a href="/" class="btn btn-sm">Continue Shopping</a>  
                                          <a href= "/get-Invoice?orderId=<%= orderDetails._id %>" class="btn btn-sm" style="background-color: rgb(46, 36, 180);">Download Invoice</a>  
                            </div>
                        </div>  

                        <script>
                            document.addEventListener("DOMContentLoaded", () => {
                              const actionButtons = document.querySelectorAll('.action-button');
                          
                              actionButtons.forEach((button) => {
                                button.addEventListener('click', (e) => {
                                  e.preventDefault();
                          
                                  const action = button.getAttribute('data-action');
                          
                                  Swal.fire({
                                    title: "Are you sure?",
                                    text: "You will not be able to revert this!",
                                    icon: "warning",
                                    showCancelButton: true,
                                    confirmButtonColor: "#3085d6",
                                    cancelButtonColor: "#d33",
                                    confirmButtonText: "Yes!"
                                  }).then((result) => {
                                    if (result.isConfirmed) {
                                      window.location.href = action;
                                    }
                                  });
                                });
                              });
                            });
                          </script>
                          
                        


